{
  "name": "jules-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Google Jules AI coding agent",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "jules-mcp": "build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js || true",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "inspector": "npx @modelcontextprotocol/inspector node build/index.js",
    "worker:dev": "npm run build && wrangler dev",
    "worker:deploy": "npm run build && wrangler deploy",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "jules",
    "ai",
    "coding-agent",
    "model-context-protocol",
    "google"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "agents": "^0.2.32",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251213.0",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^4.0.15",
    "chmod-cli": "^2.0.1",
    "cross-env": "^10.1.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.15",
    "wrangler": "^4.54.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
